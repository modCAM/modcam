{
	"version": 3,
	"configurePresets": [
		{
			"name": "build-minimal",
			"displayName": "Bare minimum build",
			"binaryDir": "build",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
		},
		{
			"name": "build-tests",
			"displayName": "Build tests",
			"inherits": "build-minimal",
			"cacheVariables": {
				"MODCAM_ENABLE_TESTING": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": "build-docs",
			"displayName": "Build documentation",
			"inherits": "build-minimal",
			"cacheVariables": {
				"MODCAM_BUILD_DOC": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": "linting",
			"displayName": "Perform static analysis",
			"inherits": "build-tests",
			"cacheVariables": {
				"MODCAM_ENABLE_LINTING": {
					"type": "BOOL",
					"value": "ON"
				},
				"CMAKE_EXPORT_COMPILE_COMMANDS": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": "build-all",
			"displayName": "Build everything",
			"inherits": [
				"build-tests",
				"build-docs"
			]
		},
		{
			"name": "build-all-with-linting",
			"displayName": "Build everything",
			"inherits": [
				"linting",
				"build-docs"
			]
		},
		{
			"name": "build-docs-only",
			"displayName": "Build only the documentation",
			"inherits": "build-docs",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": {
					"type": "FILEPATH",
					"value": ""
				},
				"MODCAM_BUILD_PROJECT": {
					"type": "BOOL",
					"value": "OFF"
				}
			}
		}
	]
}